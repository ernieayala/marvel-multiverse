<div class="mm-styled-container -no-header">
  <div class="mm-styled-container-body">
    <ol class="items-list mm-item-list -effects">
      {{#each effects as |section sid|}}
        <li class="items-header mm-item-header" data-effect-type="{{section.type}}" data-parent-id="{{@root.actor.id}}" >
          <div><span class="item-name effect-name">{{localize section.label}}</span></div>
          <div><span>{{localize "MARVEL_MULTIVERSE.Effect.Source"}}</span></div>
          <div><span>{{localize "EFFECT.TabDuration"}}</span></div>
          <div class="item-controls effect-controls">
            <a class="effect-control item-control" data-action="create" title="{{localize 'DOCUMENT.Create' type="Effect"}}">
              <i class="fas fa-plus"></i>
            </a>
          </div>
        </li>

        <ol class="item-list mm-item-list">
        {{#each section.effects as |effect|}}
          <li class="item effect mm-item" data-effect-id="{{effect.id}}" data-parent-id="{{effect.parent.id}}">
            <div class="item-name effect-name mm-item-name">
              <img class="item-image" src="{{effect.img}}"/>
              <span>{{effect.name}}</span>
            </div>
            <div class="effect-source">{{effect.sourceName}}</div>
            <div class="effect-duration">{{effect.duration.label}}</div>
            <div class="item-controls effect-controls flexrow">
              <a class="effect-control item-control" data-action="toggle" title="{{localize 'MARVEL_MULTIVERSE.Effect.Toggle'}}">
                <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
              </a>
              <a class="effect-control item-control" data-action="edit" title="{{localize 'DOCUMENT.Update' type="Effect"}}">
                <i class="fas fa-edit"></i>
              </a>
              <a class="effect-control item-control" data-action="delete" title="{{localize 'DOCUMENT.Delete' type="Effect"}}">
                <i class="fas fa-trash"></i>
              </a>
            </div>
          </li>
        {{/each}}
        </ol>
      {{/each}}
    </ol>
  </div>
</div>
</ol>
