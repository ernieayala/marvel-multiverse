<div class="personalInfo flexrow flex-group-center">
  <label for="system.realname" class="resource-reduced-label rollable align-left" data-label="Real Name">real name</label>
  <input type="text" name="system.realname" value="{{system.realname}}" data-dtype="String"/>
</div>
<div class="personalInfo flexrow flex-group-center">
  <label for="system.teams" class="resource-reduced-label rollable align-left" data-label="teams">teams</label>
  <input type="text" name="system.teams" value="{{system.teams}}" data-dtype="String"/>
</div>
<div class="bio-sm grid grid-3col">
  <div>
    <label for="system.height" class="resource-reduced-label align-left" data-label="system.height">height</label>
    <input type="text" name="system.height" value="{{system.height}}" data-dtype="String"/>
  </div>
  <div>
    <label for="system.weight" class="resource-reduced-label align-left" data-label="system.weight">weight</label>
    <input type="text" name="system.weight" value="{{system.weight}}" data-dtype="String"/>
  </div>
  <div>
    <label for="system.gender" class="resource-reduced-label align-left" data-label="system.gender">gender</label>
    <input type="text" name="system.gender" value="{{system.gender}}" data-dtype="String"/>
  </div>
</div>
<div class="bio-sm grid grid-3col">
  <div>
    <label for="system.size" class="resource-reduced-label align-left" data-label="size">size</label>
    <select name="system.size" data-type="String">
      {{#select system.size}}
        {{#each system.actorSizes as |size key|}}
          {{#if (eq key system.size)}}
            <option value="{{key}}" selected>{{localize size.label}}</option>
          {{else}}
            <option value="{{key}}">{{localize size.label}}</option>
          {{/if}}
        {{/each}}
      {{/select}}
    </select>
  </div>
  <div>
    <label for="system.eyes" class="resource-reduced-label align-left" data-label="system.eyes">eyes</label>
    <input type="text" name="system.eyes" value="{{system.eyes}}" data-dtype="String"/>
  </div>
  <div>
    <label for="system.hair" class="resource-reduced-label align-left" data-label="system.hair">hair</label>
    <input type="text" name="system.hair" value="{{system.hair}}" data-dtype="String"/>
  </div>
</div>
<div class="personalInfo flexcol">
  <label for="system.history" class="resource-reduced-label rollable align-left" data-label="history">History</label>
  <textarea name="system.history" data-dtype="String">{{system.history}}</textarea>
</div>
<div class="personalInfo flexcol">
  <label for="system.personality" class="resource-reduced-label rollable align-left" data-label="personality">Personality</label>
   <textarea name="system.personality" data-dtype="String">{{system.personality}}</textarea>
</div>
