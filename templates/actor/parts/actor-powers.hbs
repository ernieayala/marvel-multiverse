<div class='resources'>
  {{#each powers as |powers powerSet|}}
    {{#if powers}}
      <div class="resource-powerset resource">
        <ol class="items-list resources">
          <li class='item flexrow resource items-header'>
            <div class='item-name power-item'>
              {{localize 'MARVEL_MULTIVERSE.Item.Power.PowerSET' set=powerSet}}
            </div>
            <div class='item-controls'>
              <a
                class='item-control item-create'
                title='{{localize "DOCUMENT.Create" type='Power'}}'
                data-type='power'
                data-power-set='{{powerSet}}'
              >
                <i class='fas fa-plus'></i>
              </a>
            </div>
          </li>
          {{#each powers as |item id|}}
            <li class='item resource power flexrow' data-item-id='{{item._id}}'>
              <div class='item-name power-item'>
                <h4><a class='rollable' data-roll-type='item'>{{item.name}}</a></h4>
              </div>
              <div class='item-controls'>
                {{#if item.system.attackAbility}}  
                  <a 
                    class='rollable'
                    title='Roll Power'
                    data-roll='{1d6,1dm,1d6}+@abilities.{{item.system.attackAbility}}.value'
                    data-label='{{item.name}} {{item.system.attackAbility}}'
                  >
                    <i class='fa-regular fa-dice'></i>'
                  </a>
                {{/if}}
                <a
                  class='item-control item-edit'
                  title='{{localize "DOCUMENT.Edit" type='power'}}'
                >
                  <i class='fas fa-edit'></i>
                </a>
                <a
                  class='item-control item-delete'
                  title='{{localize "DOCUMENT.Delete" type='power'}}'
                >
                  <i class='fas fa-trash'></i>
                </a>
              </div>
            </li>
          {{/each}}
        </ol>
      </div>
    {{/if}}
  {{/each}}
</ol>